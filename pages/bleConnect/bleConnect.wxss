.box {
  display: flex;
  justify-content : center;
  align-items: center;
  align-content: center;
  flex-wrap: wrap;
  margin-top: 40rpx;
}
button{
  width: 300rpx !important;
}
.connect_device{
  /* margin: 20px 0px 0px 20px */
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fixed-bottom {
  bottom: 0;
  width: 100%;
  position: fixed;
}

.radius {
  border-radius: 20rpx;
}

page {
  color: #333;
}

.devices_summary {
  margin-top: 30px;
  padding: 10px;
  font-size: 16px;
}

.device_list {
  height: 300rpx;
  margin: 50rpx 5rpx;
  margin-top: 20rpx;
  border: 5rpx solid #EEE;
  border-radius: 5rpx;
  width: auto;
}

.device_item {
  border-bottom: 5rpx solid #EEE;
  padding: 40rpx 0rpx 0rpx 0rpx;
  font-weight: 400 !important;
  color: "#20B2AA";
  width: 700rpx !important;
}

.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}

.connected_info {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}

.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}

